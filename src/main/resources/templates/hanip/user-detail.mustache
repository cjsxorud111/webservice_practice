    </div>

    <div>
        문의내역
        <div>
            문의수정
        </div>
    </div>
    <script type="text/javascript">

        function reservation_delete(id) {

            $.ajax({
                type: 'DELETE',
                url: '/api/v1/reservation/' + id,
                dataType: 'json',
                contentType:'application/json; charset=utf-8'
            }).done(function () {
                alert('예약내역이 삭제되었습니다.');
                location.reload();
            }).fail(function (error) {
                alert(JSON.stringify(error));
            });
        }
    </script>
