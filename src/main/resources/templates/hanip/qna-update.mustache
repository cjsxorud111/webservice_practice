{{>layout/header}}
{{>layout/banner}}
<h1>qna업데이트</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title">글번호</label>
                <input type="text" class="form-control"
                    id="id" value="{{qna.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control"
                       id="title" value="{{qna.title}}">
            </div>
            <div class="form-group">
                <label for="title">작성자</label>
                <input type="text" class="form-control"
                       id="author" value="{{qna.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content">
                    {{qna.content}}
                </textarea>
            </div>

        </form>
        <a href="/qna/detail/{{qna.id}}" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-qna-update">수정완료</button>
        <button type="button" class="btn btn-danger" id="btn-qna-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}